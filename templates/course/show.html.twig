{% extends 'base.html.twig' %}

{% block title %}Lista kursów{% endblock %}

{% block body %}
    
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }

    select:invalid{
        color: gray;
    }
    option{
        color: black;
    }
</style>

<h1>{{ course.name }}</h1> 
<h4>{{ course.description }}</h4>
<a href="{{ path('app_section_add',{ 'cid': course.id }) }}">Dodaj sekcje</a>

{% for row in pagination %} 
    <div style="color: red;">{{ row.name }} 
        <select onchange="location = this.value;">
            <option value="" disabled selected hidden>Dodaj</option>
            <option value="{{ path('app_task_add',{ 'sid': row.id }) }}">Skrzynkę</option>
            <option value="{#{{ path('app_material_add',{ 'cid': course.id }) }}#}">Materiały</option>
        </select>
    </div>
{% endfor %} 

<div class="navigation"> 
{{ knp_pagination_render(pagination) }} 
</div> 



{% endblock %}
